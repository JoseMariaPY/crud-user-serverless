{
    "$schema": "https://json-schema.org/draft-04/schema",
    "title": "User",
    "type": "object",
    "required": [ "name", "email" ],
    "properties": {
      "name": {
        "type": "string",
        "description": "The user's name."
      },
      "email": {
        "type": "string",
        "description": "The user's email.",
        "format": "email"
      }
    }
  }